<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sinagram.yallyandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Util.YallyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_yally"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round_yally"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity android:name=".Writing.Ui.WritingActivity" />
        <activity
            android:name=".Detail.View.DetailPostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|adjustPan" />
        <activity
            android:name=".Detail.View.EditPostActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home.View.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sign.SignActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Profile.Ui.ListenActivity" />
        <activity android:name=".Profile.Ui.ModifyProfileActivity" />
    </application>
</manifest>
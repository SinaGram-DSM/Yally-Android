<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FDFDFD"
    android:orientation="vertical"
    tools:context=".Home.View.HomeActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_profile_ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proflie_nickname_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="5sp"
                android:text="mark"
                android:textColor="@color/profile_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/profile_mail_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5sp"
                android:text="mark0802@gmail.com"
                android:textColor="@color/profile_gray"
                android:textSize="10sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_listening_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:background="@android:color/transparent"
                    android:text="@string/listening"
                    android:textColor="@color/profile_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_listeningCount_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:maxEms="3"
                    android:text="127"
                    android:textColor="@color/profile_gray"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/profile_listener_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:background="@android:color/transparent"
                    android:text="@string/listener"
                    android:textColor="@color/profile_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_listenerCount_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:maxEms="3"
                    android:text="3"
                    android:textColor="@color/profile_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_timeLine_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />

</LinearLayout>
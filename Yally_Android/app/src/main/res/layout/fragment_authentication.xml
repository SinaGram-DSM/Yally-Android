<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="57dp"
    android:paddingTop="24dp"
    android:paddingEnd="57dp">

    <TextView
        android:id="@+id/signinup_title_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/notosanskr_medium"
        android:text="@string/welcome_first_visit"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/signinup_subtitle_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:text="@string/start_sign_up"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="31dp"
        android:background="@color/confirmBox"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:letterSpacing="0.6"
        android:textSize="40sp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/signinup_do_sign_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_gradient"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
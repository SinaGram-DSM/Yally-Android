<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Ui.ModifyProfileActivity">

    <ImageButton
        android:id="@+id/modify_changeProfile_imagebutton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/icon_metrofile"
        app:layout_constraintEnd_toEndOf="@+id/modify_changeProfile_imageView"
        app:layout_constraintStart_toStartOf="@+id/modify_changeProfile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/modify_changeProfile_imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/modify_changeNickname_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="76dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modify_changeProfile_imageView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modify_changeNickname_editText" />

    <TextView
        android:id="@+id/modify_count_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="76dp"
        android:text="(0/10ìž)"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modify_changeNickname_editText" />

    <Button
        android:id="@+id/modify_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@android:color/transparent"
        android:text="@string/logout"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modify_changeNickname_editText" />
</androidx.constraintlayout.widget.ConstraintLayout>